<h1>目標一覧</h1>

<%= link_to '新しい目標を登録', new_goal_path, class: 'btn btn-primary' %>

<% @goals.each do |goal| %>
  <div class="goal">
    <h2><%= goal.title %></h2>
    <ul>
      <% goal.tasks.each_with_index do |task, i| %>
        <li><strong>タスク <%= i + 1 %>:</strong> <%= task.title %></li>
      <% end %>
    </ul>
  </div>
  <hr>
<% end %>
